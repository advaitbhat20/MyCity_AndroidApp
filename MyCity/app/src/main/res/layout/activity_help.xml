<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000022"
    tools:context="com.example.advait.mycity.help">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Emergency"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/text7"/>

    <Button
        android:id="@+id/button16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image9"
        />
    <Button
        android:id="@+id/button17"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/image11"
        android:layout_below="@+id/text7"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/view"
        android:layout_alignParentStart="true"
        />

    <Button
        android:background="@drawable/image12"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/button18"
        android:layout_below="@+id/text7"
        android:layout_toRightOf="@+id/view"
        android:layout_toEndOf="@+id/view"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toLeftOf="@+id/view"
        android:layout_below="@+id/view4"
        android:id="@+id/button19"
        android:background="@drawable/image13"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/view"
        android:layout_below="@id/view4"
        android:background="@drawable/image14"
        android:id="@+id/button20"
        />
    
    <View
        android:layout_width="8dp"
        android:layout_height="316dp"
        android:layout_below="@id/Text1"
        android:layout_centerInParent="true"
        android:id="@+id/view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/button17"
        android:id="@+id/view4"/>


</RelativeLayout>
